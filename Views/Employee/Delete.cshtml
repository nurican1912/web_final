@model Employee
@{
    ViewData["Title"] = "Delete Employee";
}
<h2>Delete Employee</h2>
<h4>Are you sure you want to delete this employee?</h4>
<div>
    <h5>@Model.FirstName @Model.LastName</h5>
    <p><b>Department:</b> @Model.Department?.Name</p>
    <p><b>Position:</b> @Model.Position?.Name</p>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" value="Delete" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form> 